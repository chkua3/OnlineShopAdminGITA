@model GetAddressResponse

@{
    var address = Model.Address;
    ViewData["Title"] = address.AddressLine1;
    var dataTargetGuid = Guid.NewGuid();
}

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address.AddressId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address.AddressId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address.AddressLine1)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address.AddressLine1)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address.AddressLine2)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address.AddressLine2)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address.StateProvince)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address.StateProvince)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address.CountryRegion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address.CountryRegion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address.PostalCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address.PostalCode)
        </dd>
    </dl>
</div>
<div>
    <button type="button" class="btn btn-secondary">
        <a asp-action="GetAddresses">Back to List</a>
    </button> |

    <button type="button" class="btn btn-warning">
        @Html.ActionLink("Edit", "Update", new { address.AddressId })
    </button> |

    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#@dataTargetGuid">
        Delete
    </button>

    <div class="modal fade" id="@dataTargetGuid" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    @* <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button> *@
                    <h4 class="modal-title" id="myModalLabel">Delete Confirmation</h4>
                </div>
                <div class="modal-body">
                    Are you sure want to delete this item?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger">
                        @Html.ActionLink("Delete", "Delete", new { address.AddressId })
                    </button> |
                    <button type="button" class="btn btn-warning">
                        @Html.ActionLink("Edit", "Update", new { address.AddressId })
                    </button> |
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
